<Window x:Class="VoidVenture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VoidVenture"
        mc:Ignorable="d"
        Title="Space Game" Height="600" Width="800"
        MinHeight="400" MinWidth="600"
        WindowState="Maximized"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True" WindowStartupLocation="CenterScreen"
        x:Name="mainWindow">



    <Window.Resources>
        
        <!-- Define reusable button style -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        
        
        </Window.Resources>



        <Grid x:Name="MainGrid">
        <!-- Background Canvas -->
            
        <Canvas x:Name="BackgroundCanvas">
        </Canvas>

        <!-- Map Canvas -->
        <Canvas x:Name="MapCanvas" Background="Transparent">
            
            <Image x:Name="terrainImage" Stretch="None">
                <Image.RenderTransform>
                    <ScaleTransform x:Name="terrainScaleTransform" 
                       ScaleX="1"
                       ScaleY="1"/>
                </Image.RenderTransform>
            </Image>

            <Label x:Name="infoText" Content="" Visibility="Collapsed"
                   Height="60" Width="60" FontSize="14" Background="#CC4A4A4A"
                   BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}"
                   Foreground="#FFDDDDDD"/>

            <StackPanel x:Name="debugPanel" Height="227" Canvas.Left="976"
                        Visibility="Collapsed" Canvas.Top="230" Width="214"
                        HorizontalAlignment="Center" VerticalAlignment="Top">
                <Label x:Name="label1" Content="Click to update"/>
                <Label x:Name="label2" Content=""/>
                <Label x:Name="label3" Content=""/>
                <Label x:Name="label4" Content=""/>
                <Label x:Name="label5" Content=""/>
            </StackPanel>

        </Canvas>

        <!-- Game Canvas -->
        <Canvas x:Name="GameCanvas" Background="Transparent">

        </Canvas>





        <Grid x:Name="MenuOverlay" Visibility="Collapsed">
            <!-- Sidebar Menu -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Sidebar Content -->
            <StackPanel Grid.Column="0" Background="#FF333333">
                <Button x:Name="generalMenuButton" Content="General" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="White" FontSize="16" Margin="10" />
                <Button x:Name="settingsMenuButton" Content="Settings" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="White" FontSize="16" Margin="10" />
                <Button x:Name="saveMenuButton" Content="Save Manager" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="White" FontSize="16" Margin="10" />
            </StackPanel>




            <!-- Content -->
            <Grid Grid.Column="1" Background="#FFEEEEEE" x:Name="MenuGeneral" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Text="General" FontSize="20" FontWeight="Bold" Margin="20" />

                <!-- Settings Content -->
                <Grid Grid.Row="1" Margin="20">



                </Grid>
            </Grid>





            <!-- Content -->
            <Grid Grid.Column="1" Background="#FFEEEEEE" x:Name="MenuSettings" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Text="Settings" FontSize="20" FontWeight="Bold" Margin="20" />

                <!-- Settings Content -->
                <Grid Grid.Row="1" Margin="20">



                </Grid>
            </Grid>



            <!-- Content -->
            <Grid Grid.Column="1" Background="#FFEEEEEE" x:Name="MenuSave" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Text="Save Manager" FontSize="20" FontWeight="Bold" Margin="20" />

                <!-- Save Content -->
                <Grid Grid.Row="1" Margin="20">
                    <!-- ComboBox for selecting save files -->
                    <ComboBox x:Name="saveFileSelector" 
                          HorizontalAlignment="Left" 
                          VerticalAlignment="Top" 
                          Width="200" 
                          Margin="0,10,0,0" 
                          Background="#FFF5F5F5" 
                          Foreground="#FF333333" />

                    <!-- TextBlock to display save details -->
                    <TextBlock x:Name="saveDetails" 
                           Text="Select a save file to view details." 
                           TextWrapping="Wrap" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Top" 
                           Margin="0,50,0,0" 
                           Width="300" 
                           Height="150" 
                           Background="#FFF5F5F5" 
                           Padding="10" 
                           Foreground="#FF333333" />

                    <!-- Buttons for actions -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,20">
                        <Button x:Name="loadButton" Content="Load"
                                BorderThickness="1" 
                                BorderBrush="#FF1A5025"
                                    HorizontalAlignment="Center" VerticalAlignment="Center" />
                        <Button x:Name="deleteButton" Content="Delete"
                                BorderThickness="1" 
                                BorderBrush="#FF1A5025"
                                    HorizontalAlignment="Center" VerticalAlignment="Center" />
                        <Button x:Name="saveButton" Content="Save"
                                BorderThickness="1" 
                                BorderBrush="#FF1A5025"
                                    HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </StackPanel>

                    <!-- Load External Save Button -->
                    <Button x:Name="resaveButton" 
                        Content="Save to external folder" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Bottom" 
                        Width="150" 
                        FontSize="12" />

                    <!-- Load External Save Button -->
                    <Button x:Name="loadExternalSave" 
                        Content="Load External Save" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Bottom" 
                        Width="150" 
                        FontSize="12" />

                </Grid>
            </Grid>

            <!-- Close Button -->
            <Button x:Name="closeOverlay" 
                        Content="Close" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom" 
                        Margin="20,20,20,20" 
                        Width="100" />

        </Grid>

        <!-- Close Button -->
        <Button x:Name="CloseButton" 
                Content="Close" 
                Style="{StaticResource ButtonStyle}" 
                Margin="1,0,0,1" HorizontalAlignment="Left" Width="100" Height="45" VerticalAlignment="Bottom" Background="Red"/>

        <!-- Menu Button -->
        <Button x:Name="MenuButton" 
                Content="Menu" 
                Style="{StaticResource ButtonStyle}" 
                Margin="1,0,0,1" HorizontalAlignment="Left" Width="100" Height="45" VerticalAlignment="Top" Background="#FF0000FF"/>


    </Grid>
    
    
</Window>
