<Window x:Class="DuckHunter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DuckHunter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowState="Maximized">

    <Window.Resources>
        <!-- Define reusable button style -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" Background="{TemplateBinding Background}" CornerRadius="20" Padding="5">
                            <Grid>
                                <!-- Content Presenter for Button Text/Content -->
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                <!-- Overlay for Hover Effect -->
                                <Border x:Name="HoverOverlay" Background="#70000000" CornerRadius="10" Opacity="0" />
                            </Grid>
                        </Border>

                        <!-- Triggers for Hover Effect -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HoverOverlay" Property="Opacity" Value="1" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rounded Border Style -->
        <Style x:Key="RoundedBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#7F2D2D2D"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Reusable Label Style -->
        <Style x:Key="RoundedLabelStyle" TargetType="Label">
            <Setter Property="Background" Value="#4D000000"/>
            <!-- Semi-transparent black -->
            <Setter Property="Foreground" Value="White"/>
            <!-- White text for contrast -->
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid x:Name="GameGrid">
        <!-- Background Canvas -->
        <Canvas x:Name="MainCanvas"/>

        <!-- Main Menu Canvas -->
        <Border Style="{StaticResource RoundedBorderStyle}" x:Name="MainMenuCanvas" Width="800" Height="450" Visibility="Collapsed">
            <Grid>

                <Button x:Name="StartGameButton" Content="Start Game" 
                        Width="200" Height="50"
                        Style="{StaticResource ButtonStyle}" 
                        Click="StartGameButton_Click" Margin="300,50,300,350" Background="#FF75ED85" FontSize="16"/>

                <Button x:Name="NewGameButton" Content="New Game"
                        Width="200" Height="50"
                        Style="{StaticResource ButtonStyle}" 
                        Click="NewGameButton_Click" Margin="550,175,50,225" Background="#FF8F1B1B" Foreground="#FFFFFDFD" FontSize="16"/>

                <Button x:Name="SettingsButton" Content="Settings" 
                        Width="200" Height="50" 
                        Style="{StaticResource ButtonStyle}" 
                        Click="SettingsButton_Click" Margin="300,175,300,225" Background="#FF938A8A" Foreground="Black" FontSize="16"/>

                <Button x:Name="UpgradesButton" Content="Upgrades" 
                        Width="200" Height="50"
                        Style="{StaticResource ButtonStyle}" 
                        Click="UpgradesButton_Click" Margin="50,175,550,225" Background="#FFB2FF00" FontSize="16"/>

                <Button x:Name="ExitButton" Content="Exit" 
                        Width="200" Height="50"
                        Style="{StaticResource ButtonStyle}" 
                        Click="ExitButton_Click" Margin="300,300,300,100" Background="Red" Foreground="Black" FontSize="16"/>
            </Grid>
        </Border>

        <!-- Settings Canvas -->
        <Border Style="{StaticResource RoundedBorderStyle}" x:Name="SettingsCanvas" Width="800" Height="450" Visibility="Collapsed">
            <Grid>
                <TextBlock Text="Settings :" FontSize="24" Foreground="White" HorizontalAlignment="Center" Margin="0,40,0,340"/>

                <Button x:Name="EasyButton" FontSize="16"
                        Style="{StaticResource ButtonStyle}"  Click="EasyDifficulty" Content="Easy Difficulty" Height="56" Width="200" 
                        HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,175,0,0" Background="#FF4CE856" Foreground="White"/>

                <Button x:Name="MediumButton" FontSize="16"
                        Style="{StaticResource ButtonStyle}"  Click="MediumDifficulty" Content="Medium Difficulty" Height="56" Width="200" 
                        HorizontalAlignment="Left" VerticalAlignment="Top" Margin="300,175,0,0" Background="#FFE1E942" Foreground="White"/>

                <Button x:Name="HardButton" FontSize="16"
                        Style="{StaticResource ButtonStyle}"  Click="HardDifficulty"  Content="Hard Difficulty" Height="56" Width="200" 
                        HorizontalAlignment="Left" VerticalAlignment="Top" Margin="550,175,0,0" Background="#FFF16724" Foreground="White"/>

                <Button x:Name="ExitSettingsButton" Content="Back to Main Menu" 
                        Style="{StaticResource ButtonStyle}" 
                        Width="200" Height="50" Click="ExitSettingsButton_Click" Margin="300,300,300,100" Background="#FF95E6F0" Foreground="Black" FontSize="16"/>
            </Grid>
        </Border>

        <!-- Upgrades Canvas -->
        <Border Style="{StaticResource RoundedBorderStyle}" x:Name="UpgradesCanvas" Width="800" Height="450" Visibility="Collapsed">
            <Grid>
                <StackPanel Orientation="Vertical" Width="250" Height="300" HorizontalAlignment="Left" Margin="28,85,0,65">
                    <Button Content="Upgrade DuckSpawn" x:Name="UpdrageDuckspawn"
                            Style="{StaticResource ButtonStyle}"  Click="UpgradeBulletSpeed_Click" Margin="0,20,0,0"/>
                    <TextBlock x:Name="DuckSpawnText" Text="Duckspawn: 600ms" Margin="10" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <Button Content="Upgrade Bullet Speed" x:Name="UpdrageFireRate"
                            Style="{StaticResource ButtonStyle}"  Click="UpgradeFireRate_Click" />
                    <TextBlock x:Name="FireRateText" Text="Fire Rate: 300ms" Margin="10" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <Button Content="Upgrade Multiplier" x:Name="UpdrageMulti"
                            Style="{StaticResource ButtonStyle}"  Click="UpgradeMulti_Click"/>
                    <TextBlock x:Name="MultiText" Text="Multi: 1.00" Margin="10" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                </StackPanel>

                <StackPanel Orientation="Vertical" Width="248" Height="300" HorizontalAlignment="Right" Margin="0,85,28,65">
                    <Button Content="Buy Quickfire Ability"  x:Name="BuyAbilityQuickfire"
                            Style="{StaticResource ButtonStyle}"   Click="BuyAbility_Click" Margin="0,20,0,0"/>
                    <Label  Margin="10" Height="44" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="This will double your bullet speed for 5 seconds"
                            TextWrapping="Wrap" Padding="5" Height="41" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Label>
                </StackPanel>

                <Button x:Name="ExitUpgradesButton" Content="Back to main menu" 
                        Style="{StaticResource ButtonStyle}" 
                        Width="200" Height="50" Click="ExitUpgradesButton_Click" Margin="300,225,300,175" Background="#FFB2FF00" Foreground="Black" FontSize="16"/>

                <Button x:Name="BackToGameButton" Content="Back to Game" Visibility="Collapsed"
                        Style="{StaticResource ButtonStyle}" 
                        Width="200" Height="50" Click="BackToGameButton_Click" Margin="300,335,300,65" Background="#FF00FFED" Foreground="Black" FontSize="16"/>
            </Grid>
        </Border>

        <!-- Game over Canvas -->
        <Border Style="{StaticResource RoundedBorderStyle}" x:Name="DeathCanvas" Width="800" Height="450" Visibility="Collapsed">
            <Grid>
                <Button x:Name="NewGameButton2" Content="New Game" Height="50" Width="200"
                        Style="{StaticResource ButtonStyle}" 
                        Click="NewGameButton_Click" Margin="300,175,300,225" Background="#FF8F1B1B" Foreground="#FFFFFDFD" FontSize="16"/>

                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Width="400" Margin="0,10,0,0">
                    <Label x:Name="ScoreDisplay2" Style="{StaticResource RoundedLabelStyle}"/>
                    <Label x:Name="deathDisplay" Style="{StaticResource RoundedLabelStyle}" Margin="0,6,0,0"/>
                </StackPanel>

                <Button x:Name="ExitButton2" Content="Exit" 
                        Width="200" Height="50"
                        Style="{StaticResource ButtonStyle}" 
                        Click="ExitButton_Click" Margin="300,294,300,106" Background="Red" Foreground="Black" FontSize="16"/>
            </Grid>
        </Border>


        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" Margin="0,10,0,0">
            <Label x:Name="ScoreDisplay" Style="{StaticResource RoundedLabelStyle}" Visibility="Hidden"/>
            <Label x:Name="pointDisplay" Style="{StaticResource RoundedLabelStyle}" Visibility="Hidden" Margin="0,6,0,0"/>
        </StackPanel>

        <Label x:Name="infoText" Content="" Visibility="Collapsed"
       Height="60" Width="60" FontSize="14" Background="#CC4A4A4A"
       BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}"
       Foreground="#FFDDDDDD">
            <Label.RenderTransform>
                <TranslateTransform x:Name="infoTextTransform" />
            </Label.RenderTransform>
        </Label>
        
    </Grid>
</Window>